{
  "compilerOptions": {
    "target": "ESNext",
    "module": "CommonJS",
    "declaration": true,
    "outDir": "./dist",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "paths": {
      "#modules/*": ["./src/modules/*/"],
      "#common/*": ["./src/common/*/"]
    }
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"]
}
